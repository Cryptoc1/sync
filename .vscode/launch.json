  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch (with test args)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/dist/sync.js",
      "args": [
        "-l", "test/left",
        "-r", "test/right"
       ],
      "stopOnEntry": false,
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--nolazy"
      ],
      "console": "integratedTerminal",
      "preLaunchTask": "build",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ]
    }
  ]
}